<div class="form-box"> 
<h1 class="center">Signup!</h1>
<%= form_tag '/users', method: :post do  %>
  <div class="form">
    <div>
      Name: <input class="form-item" type="text" name="name">
    </div>
    <div>
      Email: <input class="form-item" type="email" name="email">
    </div>
    <div>
      Password: <input class="form-item" type="password" name="password">
    </div>
    <div>
      Confirm Password: <input class="form-item" type="password" name="password_confirmation">
    </div>
    
  </div>
  <div class="center">
      <input class="button button-edit" type="submit" name="submit" value="Save">  
    </div>
  <% end %>
</div> 